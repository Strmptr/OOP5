<UserControl x:Class="ops5.Info"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ops5"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="403">
            <TextBlock x:Name="Name" HorizontalAlignment="Left" Height="120" TextWrapping="Wrap" Width="403" FontSize="48"/>
            <TextBlock x:Name="Company" HorizontalAlignment="Left" Height="120" TextWrapping="Wrap" Width="403" FontSize="48"/>
            <TextBlock x:Name="Phone" HorizontalAlignment="Left" Height="120" TextWrapping="Wrap" Width="403" FontSize="48"/>
            <StackPanel Height="88">
                <Button Content="Call" Height="28" ToolTip="Call"/>
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="276" Margin="485,36,0,0" VerticalAlignment="Top" Width="274">
            <Image x:Name="Image" Height="276"/>
        </StackPanel>

    </Grid>
</UserControl>
